<%- include("partials/header") %>

<!-- add new member into database of customer table -->
<div class="container">
	<div class="row">
		<h1 style="text-align: center">
			Register Page
		</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/register" method="POST">
				<div class="form-group">
					<label for="firstName">First Name</label>
					<!-- name attribute is used for call this variable -->
					<input class="form-control" type="text" name="firstName" required placeholder="Required">
				</div>
				<div class="form-group">
					<label for="middleName">Middle Name</label>
					<input class="form-control" type="text" name="middleName" placeholder="Optional">
				</div>
				<div class="form-group">
					<label for="lastName">Last Name</label>
					<input class="form-control" type="text" name="lastName" required placeholder="Required">
				</div>
				<div class="form-group">
					<lable for="email">Email</lable>
					<input class="form-control" type="text" name="email" required placeholder="Required">
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input class="form-control" type="password" name="password" required placeholder="Required">
				</div>
				<div class="form-group">
					<lable for="phoneNumber">Phone Number</lable>
					<input class="form-control" type="text" name="phoneNumber">
				</div>
				<div class="form-group">
					<lable for="address">Address</lable>
					<input class="form-control" type="text" name="address">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Register</button>
				</div>
			</form>
			<a href="/">Go Back</a>
		</div>
	</div>
</div>

<%- include("partials/footer") %>
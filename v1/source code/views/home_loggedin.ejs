<!-- add header.ejs in the front -->
<%- include ("partials/header") %>

<!--  navbar-->
<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
			<a class="navbar-brand">CS425 Electronic Vendor</a>		
		</div>
		<div class="collapse navbar-collapse">
			<ul class="nav navbar-nav navbar-right">
				<li><a href='/profile'>Profile</a></li>
				<li><a href='/logout'>Logout</a></li>
				<li><a href="/cart">Cart</a></li>
			</ul>
		</div>
	</div>
</nav>

<div class='container'>
	<header class='jumbotron'>
		<div class='container text-center'>
			<h2>
				Welcome to CS425 Electronic Vendor
			</h2>
			<p>
				View our products from all over the world
			</p>
		</div>
    </header>
	
	<div class='row text-center' style='display:flex; flex-wrap: wrap;'>
		<div class='col-lg-12'>
			<h3>
				Our Most Popular Products!
			</h3>
		</div>
		
	<!--  Product -->
	<!-- When user click "Add to Cart", call addToCart router -->
		<% product.forEach(function(product){ %>
		<div class='col-md-3 col-sm-6'>
			<!-- thumbnail: a bootstrap class, used for make a grid item-->
			<div class='thumbnail'>
				<img src='<%=product.PRODUCT_IMAGE %>'>
				<div class='caption'>
					<p><%= product.PRODUCT_NAME %></p>
					<p><%= product.PRICE %><p>
				</div>
				<form action='cart' method='POST'>
					<input type='hidden' value='<%= product.PRODUCT_ID %>' name='ProductInCart'>
					<button>Add to Cart</button>
				</form>
			</div>
		</div>
		<% }); %>
	</div>
</div>

<!-- add footer.ejs in the end -->
<%- include ("partials/footer") %>